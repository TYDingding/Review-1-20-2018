#include<iostream>
#include<cstring>
using namespace std;

void main()
{
	int n;
	cout << "Input s number beteen 1 and 9:";
	cin >> n;
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n - i-1; j++)
		{
			cout << " ";
		}
		for (int k = 0; k < i + 1; k++)
		{
			cout << k + 1;
		}
		for (int m = i; m > 0; m--)
		{
			cout << m;
		}
		cout << endl;
	}
}
